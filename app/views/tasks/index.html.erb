
<strong>
  <p class="new_task">
    <%= link_to "New task", new_task_path %>
  </p>
</strong>


<ul>
  <% @tasks.each do |task| %>
  <li>
    <strong>
      <p>
        <%= task.action %>
      </p>

      <p>Actual Completed Date:
        <%= task.task_marked_completion_date %>
      </p>

      <%= link_to "Edit", edit_task_path(task.id) %>
      <%= link_to "View Details", task_path(task.id) %>
      <%= link_to "Delete", task_path(task), method: :delete, data: {
        confirm: "Are you sure you want to delete #{task.action}"
        } %>

        <strong>
          <% if task.status_completed == true %>
          <div id="strike">
            <%= link_to "Mark Complete", complete_task_path(task.id), method: :patch %>
          </div>
          <% else %>
          <%= link_to "Mark UNCOMPLETED", complete_task_path(task.id), method: :patch %>

          <% end %>

        </strong>
      </li>
      <% end %>
    </ul>
