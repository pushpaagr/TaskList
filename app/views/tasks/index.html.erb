<ul>
  <% @tasks.each do |task| %>
  <li>
    <strong>
      <p>Action:</p>
      <%= task.action %>

    </strong>
    <p>Description:</p>

    <%= task.description %>

    <p>Completion Date</p>
    <%= task.completion_date %>


    <%= link_to "Edit", edit_task_path(task.id) %>
    <%= link_to "View Details", task_path(task.id) %>
    <%= link_to "Delete", task_path(task), method: :delete, data: {
      confirm: "Are you sure you want to delete #{task.action}"
      } %>

  </li>
  <% end %>
</ul>


<strong>
  <p>
<%= link_to "New task", new_task_path %>
</p>
</strong>
