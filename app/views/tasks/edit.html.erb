

<%= form_with model: @task, method: :patch do |f| %>
<h2>Edit this Task</h2>
<p> Please enter your tasks here to save them to the database:</p>

<%= f.label :action %>
<%= f.text_field :action %>

<%= f.label :description %>
<%= f.text_field :description %>

<%= f.label :completion_date %>
<%= f.text_field :completion_date %>


<%= f.submit "Edit Task", class: "task-button" %>

<% end %>
